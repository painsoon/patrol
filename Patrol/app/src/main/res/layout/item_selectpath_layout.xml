<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/cp"/>
        <TextView
            android:id="@+id/path_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_guy"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/check_guyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textstart"
                android:layout_alignStart="@+id/textstart"
                android:layout_below="@+id/textstart"
                android:text="007"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
