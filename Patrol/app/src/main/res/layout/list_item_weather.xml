<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/list_weather_item_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    <TextView
        android:textColor="@android:color/primary_text_dark"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明天"
        android:id="@+id/list_weather_tv_day"
        />
    <TextView
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_weather_tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中雨转多云"
        android:id="@+id/list_weather_tv_weather"
        />
        <TextView
            android:textColor="@android:color/primary_text_dark"
        android:paddingTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24º"
        android:id="@+id/list_weather_temp1"
        />
        <TextView
            android:textColor="@android:color/primary_text_dark"
        android:paddingTop="15dp"
        android:layout_toLeftOf="@id/list_weather_temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17º|"
        android:id="@+id/list_weather_temp2"
        />
        <TextView
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_weather_temp1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微风"
        android:id="@+id/list_weather_wind"
        />
    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#fffefe" />

</LinearLayout>