<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    tools:context="com.psn.patrol.serverfragment.PatrolInfoAty"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tagid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="18sp"
            android:text="ailoudian" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_guy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textstart"
                android:layout_alignStart="@+id/textstart"
                android:layout_below="@+id/textstart"
                android:text="007"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/checkbox_on_background" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
